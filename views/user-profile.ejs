                        <div class="value"><%= worker.expectedSalary.toLocaleString('tr-TR') %> TL</div>
                    </div>
                    <% } %>
                </div>
            </div>

            <% if (worker.skills && worker.skills.length > 0) { %>
            <div class="info-section">
                <h2>üéØ Yetenekler & Beceriler</h2>
                <div class="skills-list">
                    <% worker.skills.forEach(skill => { %>
                        <span class="skill-tag"><%= skill %></span>
                    <% }) %>
                </div>
            </div>
            <% } %>

            <% if (worker.about) { %>
            <div class="info-section">
                <h2>üìù Hakkƒ±mda</h2>
